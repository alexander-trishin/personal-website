{
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "printWidth": 120,
    "singleQuote": true,
    "proseWrap": "preserve",
    "tabWidth": 4,
    "trailingComma": "none",
    "overrides": [
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 1
            }
        }
    ]
}
